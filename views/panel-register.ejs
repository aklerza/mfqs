<!DOCTYPE html>
<html lang="az-Latn-AZ">
<head>
    <%- include('head.ejs') %>
</head>
<body>
  <div class="container">
   <div class="row mt-5">
      <div class="col-sm login-image">
         <img src="/img/register-2.svg">
      </div>
      <div class="col-sm">
         <div class="centerbox">
            <form action='/panel/signup' method='POST'>
              <div class="form-group">
                  <label for="name">Adınız</label>
                  <input type="text" name="name" class="form-control" id="name" placeholder="Adınızı daxil edin">
               </div>
               <div class="form-group">
                  <label for="email">E-poçt ünvanınız</label>
                  <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="E-poçt'u daxil edin">
               </div>
               <div class="form-group">
                  <label for="password">Şifrəniz</label>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Şifrənizi daxil edin">
               </div>
              <div class="form-group">
                  <label for="password-again">Şifrənizi yenidən daxil edin</label>
                  <input type="password" class="form-control" id="passwordagain" name="passwordagain" placeholder="Şifrənizi daxil edin">
               </div>
               <button type="submit" class="btn btn-primary">Qeydiyyat</button>
            </form>
         </div>
      </div>
   </div>
</div>
<footer class="text-center text-lg-start text-muted">
  <%- include('footer.ejs') %>
</footer>
</body>
</html>